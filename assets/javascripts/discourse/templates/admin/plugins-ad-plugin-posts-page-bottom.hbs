    <div class='adPlugin' align = center>
    	<div class="ad-plugin-container" style='width:{{ad_width}}px; height:{{ad_height}}px;'>
        {{d-button disable=createDisabled class="btn-primary" action="createAd" label="Add Ad Code Here" icon="plus"}}
      </div>
