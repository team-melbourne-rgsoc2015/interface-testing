    <div class='buttons'>
      {{#if adVisible}}
        {{d-button class="toggle" label="ad_plugin.hide" action="hideAd" icon="eye" target="view"}}
      {{else}}
        {{d-button class="btn-primary" label="ad_plugin.show" action="showAd" icon="eye" target="view"}}
      {{/if}}
    </div>
  </div>


